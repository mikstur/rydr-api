{
  "name": "Trip",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "tripId": {
      "type": "string",
      "id": true,
      "required": true,
      "defaultFn": "uuid"
    },
    "origin": {
      "type": "GeoPoint"
    },
    "destination": {
      "type": "GeoPoint"
    },
    "userId": {
      "type": "number"  
    },
    "createdOn": {
      "type": "date",
      "defaultFn": "now"
    },
    "updateOn": {
      "type": "date",
      "defaultFn": "now"  
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "RbgUser",
      "foreignKey": "userId"
    }
  },
  "acls": [],
  "methods": {

    "findWithAdventures": {
      "accepts": [],
      "returns": { "arg": "trips", "type": "array" },
      "http": { "verb": "get", "path": "/", "status": 200 }
    },

    "createAdventure": {
      "accepts": [
        {"arg": "tripId", "type": "string", "http": {"source": "path"}},
        {"arg": "data", "type": "object", "http": {"source": "body"}}
      ],
      "returns": { "arg": "trip", "type": "object" },
      "http": { "verb": "post", "path": "/:tripId/adventures", "status": 200 }
    },

    "getAdventure": {
      "accepts": [
        {"arg": "tripId", "type": "string", "http": {"source": "path"}}
      ],
      "returns": { "arg": "adventure", "type": "object" },
      "http": { "verb": "get", "path": "/:tripId/adventure", "status": 200 }
    },

    "costs": {
      "accepts": [
        {"arg": "tripId", "type": "string", "http": {"source": "path"}}
      ],
      "returns": { "arg": "cost", "type": "object" },
      "http": { "verb": "get", "path": "/:tripId/costs", "status": 200 }
    },

    "getPotentialAdventurers": {
      "accepts": [
        {"arg": "tripId", "type": "string", "http": {"source": "path"}}
      ],
      "returns": { "arg": "potentialAdventurers", "type": "array" },
      "http": { "verb": "get", "path": "/:tripId/potential-adventurers", "status": 200 }
    } 

  }
}

